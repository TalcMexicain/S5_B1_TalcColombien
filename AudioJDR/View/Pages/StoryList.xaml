<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:View.Resources.Localization"
             x:Class="View.StoryList">

    <!-- Background color based on light and dark mode -->
    <ContentPage.BackgroundColor>
        <AppThemeBinding Light="{StaticResource MainBackgroundL}" Dark="{StaticResource MainBackgroundD}" />
    </ContentPage.BackgroundColor>

    <ScrollView VerticalOptions="FillAndExpand" 
                HorizontalOptions="FillAndExpand">
        <Grid Padding="20" 
              VerticalOptions="CenterAndExpand" 
              HorizontalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <!-- Title -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />

                <!-- Stories List -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />

                <!-- Create New Story Button -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />

                <!-- Import Story Button -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />

                <!-- Back Button -->
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <Label Grid.Row="0"
                   Text="{x:Static local:AppResources.TitleStoryList}"                   
                   TextColor="{StaticResource MainText}"
                   FontFamily="UncialAntiquaRegular"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="0,5,0,0"/>

            <!-- Stories List -->
            <CollectionView x:Name="StoriesList"
                            Grid.Row="2"
                            ItemsSource="{Binding Stories}"
                            VerticalOptions="Center"
                            Margin="0,10">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" 
                                       ItemSpacing="8"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="{StaticResource BorderColorL}"
                               CornerRadius="5"
                               Padding="10,10,10,5"
                               Margin="0,10,0,10">
                            <Frame.BackgroundColor>
                                <AppThemeBinding Light="{StaticResource SecondaryBackgroundL}" Dark="{StaticResource SecondaryBackgroundD}" />
                            </Frame.BackgroundColor>

                            <VerticalStackLayout>
                                <Label Text="{Binding Title}"
                                       FontAttributes="Bold"
                                       FontSize="16">
                                    <Label.TextColor>
                                        <AppThemeBinding Light="{StaticResource SecondaryTextL}" Dark="{StaticResource SecondaryTextD}" />
                                    </Label.TextColor>
                                </Label>

                                <Label Text="{Binding Description}">
                                    <Label.TextColor>
                                        <AppThemeBinding Light="{StaticResource SecondaryTextL}" Dark="{StaticResource SecondaryTextD}" />
                                    </Label.TextColor>
                                </Label>

                                <Label Text="{Binding Events.Count, StringFormat='Events: {0}'}"
                                       Margin="0,0,0,10">
                                    <Label.TextColor>
                                        <AppThemeBinding Light="{StaticResource SecondaryTextL}" Dark="{StaticResource SecondaryTextD}" />
                                    </Label.TextColor>
                                </Label>

                                <!-- Story Buttons -->
                                <HorizontalStackLayout HorizontalOptions="Center">
                                    <!-- Edit Story Button -->
                                    <Button Text="{x:Static local:AppResources.Edit}"
                                            TextColor="{StaticResource TextButtons}"
                                            Margin="0,0,10,0"
                                            CommandParameter="{Binding}"
                                            Clicked="OnEditStoryClicked">
                                        <Button.BackgroundColor>
                                            <AppThemeBinding Light="{StaticResource PrimaryButtonsL}" Dark="{StaticResource PrimaryButtonsD}" />
                                        </Button.BackgroundColor>
                                    </Button>

                                    <!-- Export Story Button -->
                                    <Button Text="{x:Static local:AppResources.Export}"
                                            TextColor="{StaticResource TextButtons}"
                                            Margin="0,0,10,0"
                                            CommandParameter="{Binding}"
                                            Clicked="OnExportStoryClicked">
                                        <Button.BackgroundColor>
                                            <AppThemeBinding Light="{StaticResource SecondaryButtonsL}" Dark="{StaticResource SecondaryButtonsD}" />
                                        </Button.BackgroundColor>
                                    </Button>

                                    <!-- Delete Story Button -->
                                    <Button Text="{x:Static local:AppResources.Delete}"
                                            TextColor="{StaticResource White}"
                                            BackgroundColor="{StaticResource DeleteColor}"
                                            Clicked="OnDeleteStoryClicked"
                                            CommandParameter="{Binding}"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Create New Story Button -->
            <Button x:Name="CreateNewStoryButton"
                    Text="{x:Static local:AppResources.CreateNewStory}"
                    TextColor="{StaticResource TextButtons}"
                    Grid.Row="4"
                    WidthRequest="230"
                    HeightRequest="50"
                    CornerRadius="5"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    LineBreakMode="WordWrap"
                    Clicked="OnCreateNewStoryButtonClicked">
                <Button.BackgroundColor>
                    <AppThemeBinding Light="{StaticResource PrimaryButtonsL}" Dark="{StaticResource PrimaryButtonsD}" />
                </Button.BackgroundColor>
            </Button>

            <!-- Import Story Button -->
            <Button x:Name="ImportStoryButton"
                    Text="{x:Static local:AppResources.ImportStory}"
                    TextColor="{StaticResource TextButtons}"
                    Grid.Row="6"
                    WidthRequest="230"
                    HeightRequest="50"
                    CornerRadius="5"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnImportStoryClicked">
                <Button.BackgroundColor>
                    <AppThemeBinding Light="{StaticResource PrimaryButtonsL}" Dark="{StaticResource PrimaryButtonsD}" />
                </Button.BackgroundColor>
            </Button>

            <!-- Back Button -->
            <Button x:Name="BackButton"
                    Text="{x:Static local:AppResources.Back}"
                    TextColor="{StaticResource TextButtons}"
                    Grid.Row="8"
                    WidthRequest="180"
                    HeightRequest="40"
                    CornerRadius="5"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Clicked="OnBackButtonClicked">
                <Button.BackgroundColor>
                    <AppThemeBinding Light="{StaticResource SecondaryButtonsL}" Dark="{StaticResource SecondaryButtonsD}" />
                </Button.BackgroundColor>
            </Button>
        </Grid>
    </ScrollView>
</ContentPage>
